{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "strictNullChecks": true,
    "baseUrl": "src/",
    "paths": {
      "@/content/*": ["content/*"],
      "@/components/*": ["components/*"],
      "@/api/*": ["app/api/*"],
      "@/app/*": ["app/*"],
      "@/public/*": ["public/*"],
      "@/types/*": ["types/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", "**/*.mdx", "next-env.d.ts", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
